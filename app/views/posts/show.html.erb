<div id="post_content">
  <h1 class="title">
  <%= @post.title %>
  </h1>
  <p class="date">
  Submittied <%= time_ago_in_words(@post.created_at) %> Ago
  </p>
  <p class="body">
  <%= @post.body %>
  </p>
  <div id="comments">
    	<h2><%= @post.comments.count%>Comments</h2>
    	<%= render @post.comments %>

    	<h3>Add a comments:- </h3>
    	<%= render "comments/form"%>
    </div>
</div>
